<Window x:Class="HotelProject.UI.CustomerWPF.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProject.UI.CustomerWPF"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="How would you like to login" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
            <Button Content="Customer" Margin="0,0,10,0" Padding="10" Click="Click_Customer"/>
            <Button Content="Organiser" Margin="10,0,10,0" Padding="10" Click="Click_Organiser"/>
            <Button Content="Activities" Margin="10,0,10,0" Padding="10" Click="Click_Activities"/>
        </StackPanel>
    </Grid>
</Window>